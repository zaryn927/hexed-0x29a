<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:visibility="visible"
  tools:context="edu.cnm.deepdive.hexed0x29a_demo.activities.TitleScreen">

  <ImageView
    android:id="@+id/backdrop"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    app:srcCompat="@android:color/background_dark" />
  <ImageView
    android:id="@+id/titleText"
    android:layout_width="325dp"
    android:layout_height="100dp"
    android:layout_marginTop="30dp"
    android:layout_centerHorizontal="true"
    android:scaleType="fitXY"
    app:srcCompat="@drawable/hexed" />
  <ImageButton
    android:id="@+id/creditsButton"
    style="@android:style/Widget.Holo.ImageButton"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_below="@+id/optionsButton"
    android:layout_centerHorizontal="true"
    app:srcCompat="@drawable/credits" />
  <ImageButton
    android:id="@+id/optionsButton"
    style="@android:style/Widget.Holo.ImageButton"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_below="@+id/newGameButton"
    android:layout_centerHorizontal="true"
    app:srcCompat="@drawable/options" />
  <ImageButton
    android:id="@+id/newGameButton"
    style="@android:style/Widget.Holo.ImageButton"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="30dp"
    android:layout_below="@+id/titleText"
    android:layout_centerHorizontal="true"
    android:elevation="0dp"
    app:srcCompat="@drawable/new_game" />
</RelativeLayout>
